1. Write a program to calculate sum of first N natural numbers
#include<stdio.h>
int main()
{
    int n,sum=0;
    printf("Enter any no:");
    scanf("%d",&n);
    while(n>0)
    {
        sum=sum+n;
        n--;
    }
    printf("The sum of first N natural no's is: %d",sum);
    return 0;
}
2. Write a program to calculate sum of first N even natural numbers
#include<stdio.h>
int main()
{
    int n,sumE=0;
    printf("Enter any no:");
    scanf("%d",&n);
    while(n>0)
    {
        sumE=sumE+2*n;
        n--;
    }
    printf("The sum of first N even natural no's is: %d",sumE);
    return 0;
}
3. Write a program to calculate sum of first N odd natural numbers
#include<stdio.h>
int main()
{
    int n,sumOdd=0;
    printf("Enter any no:");
    scanf("%d",&n);
    while(n>0)
    {
        sumOdd=sumOdd+2*n-1;
        n--;
    }
    printf("The sum of first N odd natural no's is: %d",sumOdd);
    return 0;
}
4. Write a program to calculate sum of squares of first N natural numbers
#include<stdio.h>
int main()
{
    int n,sumSquare=0;
    printf("Enter any no:");
    scanf("%d",&n);
    while(n>0)
    {
        sumSquare=sumSquare+n*n;
        n--;
    }
    printf("The sum of squares of first N no's is: %d",sumSquare);
    return 0;
}
5. Write a program to calculate sum of cubes of first N natural numbers
#include<stdio.h>
int main()
{
    int n,sumCube=0;
    printf("Enter any no:");
    scanf("%d",&n);
    while(n>0)
    {
        sumCube=sumCube+n*n*n;
        n--;
    }
    printf("The sum of cubes of first N no's is: %d",sumCube);
    return 0;
}
6. Write a program to calculate factorial of a number
#include<stdio.h>
int main()
{
    int n,fact=1;
    printf("Enter any no:");
    scanf("%d",&n);
    while(n>0)
    {
        fact=fact*n;
        n--;
    }
    printf("The factorial of first N no's is: %d",fact);
    return 0;
}
7. Write a program to count digits in a given number
#include<stdio.h>
int main()
{
    int n,count=0;
    printf("Enter any no:");
    scanf("%d",&n);
    while(n>0)
    {
        n=n/10;
        count++;
    }
    printf("The no digits in given no is: %d",count);
    return 0;
}
8. Write a program to check whether a given number is a Prime number or not
#include<stdio.h>
int main()
{
    int i,n,flag=0;
    printf("Enter any no:");
    scanf("%d",&n);
    for(i=2;i<=n/2;i++)
        if(n%i==0)
        {
            flag=1;
            break;
        }
    if(flag)
        printf("The given number is not prime");
    else
        printf("The given number is Prime");
    return 0;
}

9. Write a program to calculate LCM of two numbers
#include<stdio.h>
int main()
{
    int i,j,m,n;
    printf("Enter any two no:");
    scanf("%d%d",&m,&n);
    for(i=1;i<=m;i++)
        for(j=0;j<=n;j++)
    {
        if(m*i==n*j)
            goto LCM;
    }
    LCM:
    printf("The LCM of %d and %d is %d",m,n,m*i);
    return 0;
}
10. Write a program to reverse a given number
#include<stdio.h>
int main()
{
    int a,n;
    printf("Enter any no:");
    scanf("%d",&n);
    printf("The no after reversing is:");
    while(n>0)
    {
        a=n%10;
        n=n/10;
        printf("%d",a);
    }
    return 0;
}

