//1. Write a program to print unit digit of a given number
int main()
{
    int x;
    printf("enter any no: ");
    scanf("%d",&x);
    x=x%10;
    printf("%d",x);
    getch();
}
//2. Write a program to print a given number without its last digit.
int main()
{
    int x;
    printf("enter any no: ");
    scanf("%d",&x);
    x=x/10;
    printf("%d",x);
    getch();
}
//3. Write a program to swap values of two int variables
int main()
{
    int x,y;
    printf("enter x and y: ");
    scanf("%d%d",&x,&y);
    int temp=x;
    x=y;
    y=temp;
    printf("X=%d,Y=%d",x,y);
    getch();
}
//4. Write a program to swap values of two int variables without using a third variable.
int main()
{
    int x,y;
    printf("enter x and y: ");
    scanf("%d%d",&x,&y);
    x=x+y;
    y=x-y;
    x=x-y;
    printf("X=%d,Y=%d",x,y);
    getch();
}
//5. Write a program to input a three-digit number and display the sum of the digits.
int main()
{
    int x,a,s=0;
    printf("enter three digit no: ");
    scanf("%d",&x);
    while(x>0)
    {
       a=x%10;
       x=x/10;
       s=s+a;
    }
    printf("The sum of three digits is: %d ",s);
    getch();
}
//6. Write a program which takes a character as an input and displays its ASCII code.
int main()
{
    char x;
    printf("Enter any character: ")
    scanf("%c",&x);
    printf("%d",x);
    getch();
}
//8. Write a program to check whether the given number is even or odd using a bitwise operator
int main()
{
    int a;
    printf("Enter a no: ");
    scanf("%d",&a);
    if(a&1)
            printf("Odd");
    else
        printf("even");
}
//9. Write a program to print size of an int, a float, a char and a double type variable
int main()
{
    printf("The size of variables are following: \n");
    printf("int: %d, float: %d, char: %d, double: %d",sizeof(int),sizeof(float),sizeof(char),sizeof(double));
    getch();
}
//10. Write a program to make the last digit of a number stored in a variable as zero. 
int main()
{
    int x;
    printf("Enter any no: ");
    scanf("%d",&x);
    x=x/10;
    x=x*10;
    printf("%d",x);
    getch();
}
//11. Write a program to input a number from the user and also input a digit. Append a digit in the number and print the resulting number.
int main()
{
    int x,a;
    printf("Enter any no and a digit to be append: ");
    scanf("%d%d",&x,&a);
    x=x*10+a;
    printf("The new no after append: %d",x);
    getch();
}
//12. Assume price of 1 USD is INR 76.23. Write a program to take the amount in INR and convert it into USD.
#include<stdio.h>
int main()
{
    float INR,USD;
    printf("Enter the amount in INR: ");
    scanf("%f",&INR);
    USD=INR/76.23;
    printf("The same amount in USD: ");
    printf("%f",USD);
    return 0;
}
//13. Write a program to take a three-digit number from the user and rotate its digits by one position towards the right.
#include<stdio.h>
int main()
{
    int x;
    printf("Enter the No: ");
    scanf("%d",&x);
    int a=x%10;
    x=x/10;
    printf("%d%d",a,x);
    return 0;
}





